<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LootViewer.Views.ContainerListView">
	<Border BorderBrush="Gainsboro" BorderThickness="1" Margin="10,10,10,10">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<TextBlock Grid.Row="0" Margin="10">Containers</TextBlock>
			<!--https://docs.avaloniaui.net/docs/controls/datagrid-->
			<DataGrid Grid.Row="1" Items="{Binding Containers}">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Name"  Binding="{Binding Name}"/>
					<DataGridTextColumn Header="Probability" Binding="{Binding Prob}" />
				</DataGrid.Columns>
			</DataGrid>
		</Grid>
	</Border>
</UserControl>
