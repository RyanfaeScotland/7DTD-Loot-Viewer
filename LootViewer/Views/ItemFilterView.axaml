<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="75"
             x:Class="LootViewer.Views.ItemFilterView">
	<Border BorderBrush="Gainsboro" BorderThickness="1" Margin="10" Padding="5">
			<TextBox Watermark="Item Filter" Text="{Binding ItemFilterText}" VerticalAlignment="Center" MinWidth="200"></TextBox>
	</Border>
</UserControl>
