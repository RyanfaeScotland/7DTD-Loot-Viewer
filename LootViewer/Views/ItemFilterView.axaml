<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LootViewer.Views.ItemFilterView">
	<Border BorderBrush="Gainsboro" BorderThickness="1" Margin="10" Padding="10">
		<StackPanel Orientation="Horizontal">
			<TextBlock VerticalAlignment="Center" Margin="10">Item Filter</TextBlock>
			<TextBox Text="{Binding ItemFilterText}" Width="300"></TextBox>
		</StackPanel>
	</Border>
</UserControl>
