<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LootViewer.Views.LootListsFilterView">
  <Border BorderBrush="Gainsboro" BorderThickness="1" Margin="10" Padding="5" VerticalAlignment="Center">
      <CheckBox VerticalAlignment="Center" IsChecked="{Binding LootListsFilterChecked}">Hide Loot Lists With 0 Containers</CheckBox>
  </Border>
</UserControl>
